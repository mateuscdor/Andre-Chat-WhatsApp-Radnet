                        <i class="fas fa-exchange-alt  ms-2 me-2"></i>
                    </span>

                </span>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Transferir atendimento</h5>
                                <button type="button" class="btn-close btnCancelar" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div
                                    class="TransferirAtendimentoBotoes d-flex justify-content-center align-items-center mb-3 mt-2">
                                    <button type="button" class="btn btn-primary me-3" id="botaoPessoa">Pessoa</button>
                                    <button type="button" class="btn btn-light"
                                        id="botaoDepartamento">Departamento</button>
                                </div>
                                <div class="modalPessoa">


                                </div>
                                <div class="modalDepartamento">


                                </div>
                                <div class="avisoPreencher">

                                </div>
                                <div class="">
