<!-- inicio do atendimento -->

<div class="vh-100 p-3 segunda-barra bg-light">
    <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div class="">
            <h4>Atendimento</h4>
            <p>que estão em andamento</p>
        </div>
        <div class="d-flex justify-content-end mt-1 mb-3">

            <span class="d-inline-block" tabindex="0" data-bs-toggle="popover" data-bs-trigger="hover focus"
                data-bs-placement="bottom" data-bs-content="Ligar/Desligar Notificações">
                <i class="fas fa-bell ms-2 me-2 notificacoes"></i>
            </span>

            <span class="d-inline-block carregarOpcoes" tabindex="0" data-bs-toggle="popover"
                data-bs-trigger="hover focus" data-bs-placement="bottom" data-bs-content="Iniciar novo Atendimento"
                onclick="chatController.inserirCanais(event,this)">
                <span data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fas fa-plus  ms-2 me-2"></i>
                </span>

            </span>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Novo atendimento</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <span>Canal:</span>
                                    <select class="form-select selectCanal" aria-label="Default select example"
                                        id="selectCanal" required>
                                        <option value="" selected>Selecione uma opção</option>


                                    </select>
                                </div>
                                <div class="col-6">
                                    <span>Enviar para:</span>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Ex.: 55 (99) 9999-9999"
                                            aria-label="Username" aria-describedby="basic-addon1" id="inputFone">
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea class="form-control" placeholder="Leave a comment here"
                                            id="floatingTextarea2" style="height: 100px"></textarea>
                                        <label for="floatingTextarea2">Mensagem</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary novoAtendimento"
                                onclick="chatController.iniciarNovoAtendimento(event,this)">Enviar</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="vh-100" id="clienteMensagens" style='overflow-y: auto'>

        <div class="mt-4"></div>

        <!-- procurar contatos de atendimento -->

        <div class="conversas-chat" id="conversas-chat">

        </div>

        <div style="margin-bottom: 110px;"></div>
    </div>

</div>

<!-- Fim do atendimento -->